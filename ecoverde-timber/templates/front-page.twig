{% extends "base.twig" %}

{% block content %}
  <section class="hero-wrap" style='background-image: url("{{ post.get_field('fr_bg_image') }}");' data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row no-gutters slider-text align-items-center">
        <div class="col-lg-7 col-md-6 ftco-animate d-flex align-items-end">
          <div class="text">
            <!-- Type " / " to wrap text on a new line -->
            <h1 class="mb-4"> {{ post.title }} </h1>
            <p style="font-size: 18px;">{{post.get_field('title_description')}}</p>
          </div>
        </div>
      </div>
    </div>
  </section>





  <section class="ftco-section">
    <div class="container">
      
        <div class="row justify-content-center">
          <div class="col-md-12 heading-section text-center ftco-animate mb-5">
            <span class="subheading">{{post.get_field('offer_under_title')}}</span>
            <h2 class="mb-2">{{post.get_field('offer_title')}}</h2>
          </div>
        </div>

      <div class="row ftco-animate">
        <div class="col-md-12">
          <div class="carousel-properties owl-carousel all-properties">

            <!-- Property Carousel on main page -->
            {% for post in properties %}
              <div class="item property-item">
              <div class="property-wrap ftco-animate">
              <a href="{{ post.link }}" class="img" style="background-image: url({{ post.get_field('pr_image') }});">
                <div class="rent-sale">
                  <span class="{{ post.terms( {query:{taxonomy:'property_type'}} )|join('') }}">{{ post.terms( {query:{taxonomy:'property_type'}} )|join('') }}</span>
                </div>
                <p class="price"><span class="orig-price">${{ post.get_field('pr_price') }}</span></p>
              </a>
                <div class="text">
                  <ul class="property_list">
                    <li>Bedrooms: {{ post.get_field('pr_bedrooms') }}</li>
                    <li>Bathrooms: {{ post.get_field('pr_bathrooms') }}</li>
                    <li> {{ post.get_field('pr_lot_area') }} sqft</li>
                  </ul>

                  <h3><a href="#">{{ post.title }}</a></h3>
                  <span class="location">{{ post.get_field('pr_city') }}</span>


                </div>
              </div>
            </div>
            {% endfor %}
            
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

